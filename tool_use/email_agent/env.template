# Email Agent Environment Variables Template
# Copy this file to .env and fill in your actual values

# === LLM Provider API Keys ===
# At least one is required
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
MISTRAL_API_KEY=your_mistral_key_here
GOOGLE_API_KEY=...

# === Email Server Configuration ===
# URL where the email service is running
M3_EMAIL_SERVER_API_URL=http://localhost:8000
EMAIL_SERVER_HOST=0.0.0.0
EMAIL_SERVER_PORT=8000

# === LLM Service Configuration ===
LLM_SERVER_HOST=0.0.0.0
LLM_SERVER_PORT=8001
DEFAULT_LLM_MODEL=openai:gpt-4o

# === User Configuration ===
USER_EMAIL=you@email.com

# === CORS Configuration ===
# Comma-separated list of allowed origins (* for all)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# === Logging ===
LOG_LEVEL=INFO

# LLM Service Configuration (optional)
M3_LLM_SERVER_URL=http://localhost:8001
