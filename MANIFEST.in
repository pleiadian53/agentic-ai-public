# Include documentation
include README.md
include LICENSE
recursive-include docs *.md *.png *.jpg

# Include Nexus package data
recursive-include src/nexus/agents/research/prompts *.txt
recursive-include src/nexus/agents/research/server/templates *.html
recursive-include src/nexus/agents/research/server/static *.css *.js *.png *.jpg

# Include template papers
recursive-include src/nexus/templates/papers *.pdf
recursive-include src/nexus/templates/metadata *.json

# Exclude development files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
prune dev
prune output
